<div class="ui card">
	<div class="content">
		<div class="header">
			<img class="ui avatar bordered circular image" src="yukataw.png" style="width:25px;height:25px;">
			<span>
				<a href="#" style="color:#000000">
					<h3 style="margin-bottom:0px">
						<%= request.requester.email %>
					</h3>
				</a>
			</span>						
		</div>
		<div class="description">
			<p style:"margin-bottom:-10px"><%= request.request.item_name %></p>
			<p><%= request.request.location.name %></p>
		</div>
		<button class="ui right floated mini inverted red button">
			<%= form_tag cancel_path do -%>
			<%= hidden_field_tag :request_id, request.request_id %>
			<%= submit_tag 'Cancel' %>
			<% end -%>	
		</button>
	</div>
</div>

